<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.UtilitatemMetris" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary_variant</item>
        <item name="colorOnPrimary">@color/white_background</item>

        <item name="colorOnSecondary">@color/dark_text</item>
        <item name="android:textColorSecondary">@color/white_background</item>


        <item name="actionMenuTextColor">@color/white_background</item>
        <item name="android:actionMenuTextColor">@color/white_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>


        <item name="materialDrawerStyle">@style/Widget.MaterialDrawerStyleCustom</item>
        <item name="materialDrawerHeaderStyle">@style/Widget.MaterialDrawerHeaderStyleCustom</item>
    </style>


    <style name="Widget.MaterialDrawerStyleCustom" parent="Widget.MaterialDrawerStyle">
        <item name="materialDrawerInsetForeground">#4000</item>
        <!-- MaterialDrawer specific values -->
        <item name="materialDrawerBackground">@color/white_background</item>
        <item name="materialDrawerPrimaryText">@color/dark_text</item>
        <item name="materialDrawerPrimaryIcon">?android:textColorSecondary</item>
        <item name="materialDrawerSecondaryText">@color/gray</item>
        <item name="materialDrawerSecondaryIcon">?android:textColorSecondary</item>
        <item name="materialDrawerDividerColor">@color/gray</item>
        <item name="materialDrawerSelectedBackgroundColor">?colorPrimary</item>
    </style>

    <style name="Widget.MaterialDrawerHeaderStyleCustom" parent="Widget.MaterialDrawerHeaderStyle">
        <item name="materialDrawerCompactStyle">true</item>
        <item name="materialDrawerHeaderSelectionText">@color/white_background</item>
        <item name="materialDrawerHeaderSelectionSubtext">@color/white_darker</item>
    </style>

    <style name="BigGeneralButton" parent="Theme.MaterialComponents">
        <item name="android:background">@color/white_background</item>
    </style>

    <style name="BigGeneralButtonText" parent="Theme.UtilitatemMetris">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">@dimen/text_giant_32</item>
        <item name="android:background">@color/white_background</item>
    </style>

    <style name="TextFieldBoxesStyle" >
        <item name="panelBackgroundColor">@color/white_background</item>
<!--        underline edittext-->
        <item name="secondaryColor">@color/dark_text</item>
    </style>

    <style name="TabsTextAppearance" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextFieldBoxesExtendedEditTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">@dimen/text_default_16</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="RootElementStyle">
        <item name="android:background">@color/white_background</item>
    </style>

    <style name="GeneralButtonMargins">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

</resources>